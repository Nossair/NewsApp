<!DOCTYPE html>

<title>Event</title>

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Nbr_vote</th>
                <td>{{ event.nbrVote }}</td>
            </tr>
            <tr>
                <th>Is_archived</th>
                <td>{{ event.isArchived ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_end_vote</th>
                <td>{{ event.dateEndVote ? event.dateEndVote|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">back to list</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
